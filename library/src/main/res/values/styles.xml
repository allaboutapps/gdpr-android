<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.GDPRPolicyStyle" parent="">
        <item name="gdpr_errorLayout">@layout/gdpr_policy_error_loading</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textAppearanceListItem">@style/TextAppearance.AppCompat.Subhead</item>

        <item name="gdpr_colorWarning">#fe3344</item>
        <item name="gdpr_itemLayout">@layout/gdpr_policy_item_service</item>
        <item name="gdpr_closeIcon">@drawable/ic_close_black_24dp</item>
        <item name="gdpr_backIcon">@drawable/ic_arrow_back_black_24dp</item>

        <item name="gdpr_warningStyle">@style/GDPRPolicyStyle.Page.Warning</item>
        <item name="gdpr_informationStyle">@style/GDPRPolicyStyle.Page.Information</item>

        <item name="gdpr_buttonMarginBottom">0dp</item>

        <item name="android:buttonStyle">@style/GDPRPolicyStyle.Button</item>
        <item name="android:borderlessButtonStyle">@style/GDPRPolicyStyle.Button.Borderless</item>
        <item name="android:actionButtonStyle">@style/GDPRPolicyStyle.Button.Colored</item>
    </style>

    <style name="GDPRPolicyStyle.Page" parent=""/>

    <style name="GDPRPolicyStyle.Page.Information"/>

    <style name="GDPRPolicyStyle.Page.Warning">
        <item name="colorAccent">?gdpr_colorWarning</item>
    </style>

    <style name="GDPRPolicyStyle.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">?android:listPreferredItemPaddingEnd</item>
        <item name="android:layout_marginLeft">?android:listPreferredItemPaddingStart</item>
        <item name="android:layout_marginRight">?android:listPreferredItemPaddingEnd</item>
    </style>

    <style name="GDPRPolicyStyle.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">?android:listPreferredItemPaddingEnd</item>
        <item name="android:layout_marginLeft">?android:listPreferredItemPaddingStart</item>
        <item name="android:layout_marginRight">?android:listPreferredItemPaddingEnd</item>
    </style>

    <style name="GDPRPolicyStyle.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">?android:listPreferredItemPaddingEnd</item>
        <item name="android:layout_marginLeft">?android:listPreferredItemPaddingStart</item>
        <item name="android:layout_marginRight">?android:listPreferredItemPaddingEnd</item>
    </style>

</resources>