<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="?listPreferredItemPaddingStart"
        android:paddingLeft="?listPreferredItemPaddingLeft"
        android:paddingEnd="?listPreferredItemPaddingEnd"
        android:paddingRight="?listPreferredItemPaddingRight"
        android:text="@string/gdpr_sdk__settings_header_tracking_services"
        android:textAppearance="?gdpr_headerTextAppearance" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="?listPreferredItemPaddingStart"
        android:paddingLeft="?listPreferredItemPaddingLeft"
        android:paddingEnd="?listPreferredItemPaddingEnd"
        android:paddingRight="?listPreferredItemPaddingRight"
        android:text="@string/gdpr_sdk__settings_description_tracking_services"
        android:textAppearance="?gdpr_textAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_privacy"
            style="?gdpr_linkButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/gdpr_sdk__borderless_button_border_inset"
            android:layout_marginLeft="@dimen/gdpr_sdk__borderless_button_border_inset"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:minWidth="48dp"
            android:minHeight="40dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:text="@string/gdpr_sdk__settings_link_privacy_policy" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/action_allow_all"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/gdpr_sdk__borderless_button_border_inset"
            android:layout_marginRight="@dimen/gdpr_sdk__borderless_button_border_inset"
            android:text="@string/gdpr_sdk__settings_action_allow_all" />
    </LinearLayout>
</LinearLayout>