<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="?listPreferredItemPaddingStart"
        android:paddingTop="16dp"
        android:paddingEnd="?listPreferredItemPaddingEnd">

        <Button
            android:id="@+id/confirm_tos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Require ToS" />

        <Button
            android:id="@+id/tos_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Require ToS and prompt Settings" />

        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Prompt Settings" />

        <Button
            android:id="@+id/tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tracking Settings" />

        <Button
            android:id="@+id/tracking_w_terms_notics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tracking Settings w. notice" />

        <Button
            android:id="@+id/policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Privacy Policy" />

        <Button
            android:id="@+id/tos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Terms of Service" />

        <Button
            android:id="@+id/dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Dialog Privacy Changed" />

        <at.allaboutapps.gdpr.widget.PrivacyPolicySwitch
            android:id="@+id/policy_accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/policy_switch" />

    </LinearLayout>
</ScrollView>